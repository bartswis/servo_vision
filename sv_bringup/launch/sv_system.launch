<launch>

  <group ns="sv_camera_postument">

    <node pkg="sv_receptors" type="vr_camera" name="vr_camera_postument">
      <rosparam>
        subscriber: /camera_postument/image_color
        publisher: postument_camera_object_position
        view: false
        undistort: false
      </rosparam>
    </node>
  </group>

  <group ns="sv_control_system">

    <node pkg="sv_system" type="control_system" name="control_system">
      <rosparam>
        subscriber: /sv_camera_postument/vr_camera_postument/postument_camera_object_position
        publisher: object_position
        visualization_marker: object_marker
        marker_frame: world
      </rosparam>
    </node>
  </group>

</launch>